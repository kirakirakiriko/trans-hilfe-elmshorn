---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import Navigation from '../components/navigation.astro'
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
	<main class="max-w-screen-md mx-auto py-16">
		<a href="/" class="prose max-w-none py-16 flex items-center justify-between cursor-pointer">
			<h1 class="main-headline">Trans<br />Hilfe<br />Elmshorn</h1>
		</a>
		<Navigation />
		<slot />
	</main>
	</body>
</html>

<style is:global>
	html {
		font-family: system-ui, sans-serif;
	}
	.main-headline {
		@apply text-6xl;
		display: inline-block;
		background: -webkit-linear-gradient(120deg, #5BCEFA 0%, #F5A9B8 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
</style>
